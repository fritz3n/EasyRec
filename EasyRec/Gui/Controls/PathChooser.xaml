<UserControl x:Class="EasyRec.Gui.Controls.PathChooser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyRec.Gui.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Path" TextChanged="Path_TextChanged"/>
        <Button x:Name="OpenFileButton" Grid.Column="1" Content="..." Margin="5,0,0,0" Click="OpenFileButton_Click"/>
    </Grid>
</UserControl>
